{
  "name": "automatask",
  "displayName": "Automatask",
  "description": "Automatically run suitable tasks without waisting time",
  "icon": "public/icon.jpg",
  "publisher": "ludenstian",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/nhathuy13598/automatask"
  },
  "engines": {
    "vscode": "^1.67.2"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tasks",
    "automatic",
    "execute",
    "script"
  ],
  "activationEvents": [
    "onCommand:automatask.run"
  ],
  "author": {
    "name": "nhathuy"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "automatask.run",
        "title": "Automatically run tasks"
      }
    ],
    "taskDefinitions": [
      {
        "type": "automatask",
        "required": ["taskToTrigger", "label", "filename", "filetype"],
        "properties": {
          "filetype": {
            "type": "string",
            "description": "Specify filetype which this task will run automatically, if * is specified, apply to all file extension",
            "examples": [".txt"],
            "default": "*"
          },
          "filename": {
            "type": "string",
            "description": "Specify full filename which this task will run automatically, if * is specified, apply to all filename",
            "examples": ["example.txt"],
            "default": "*"
          },
          "require": {
            "type": "array",
            "items": {
              "type":"object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of requirement"
                },
                "scriptToCheck": {
                  "type": "string",
                  "description": "Specify script which will be triggered to check"
                },
                "expectedValue": {
                  "type": "string",
                  "description": "The expected value that ${scriptToCheck} needs to return"
                }
              },
              "required": ["scriptToCheck", "expectedValue" , "name"]
            },
            "description": "List of requirements that needed to automatically trigger task ${taskToTrigger}"
          },
          "taskToTrigger" : {
            "type": "string",
            "description": "The task which is triggered by this task when all conditions are met",
            "examples": ["Label of task which you want to run"]
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "automatask.run",
        "key": "F6",
        "linux": "F6",
        "mac": "F6",
        "when": "activeEditor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "deploy": "vsce publish"
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.67.2",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
